  <refnamediv>
    <refname>regpoly1</refname>
    <refpurpose> First order polynomial regression function </refpurpose>
  </refnamediv>
  
  <refsynopsisdiv>
    <title>Calling Sequence</title>
    <synopsis>[f,df] = regpoly1(S)</synopsis>
  </refsynopsisdiv>
  
  <refsection>
    <title>Parameters</title>
    <variablelist>
      <varlistentry>
        <term>S</term>
        <listitem>
          <para>m*n matrix with design sites</para>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term>f</term>
        <listitem>
          <para>[1  s]</para>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term>df</term>
        <listitem>
          <para>Jacobian at the first point (first row in S)</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsection>
  
  <refsection>
    <title>Description</title>
    <para>First order polynomial regression function</para>
  </refsection>
  
